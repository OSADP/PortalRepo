<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Custom Icon Links</name>
    <author>Leidos|Robert Roth</author>
    <version>0.3.0</version>
    <description>A custom module made by Leidos for OSADP to showcase icons as links to different services in the OSADP website.</description>
    <files>
        <filename>mod_leidos_custom_icons.xml</filename>
        <filename module="mod_leidos_custom_icons">mod_leidos_custom_icons.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>css/main.css</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                       name="categories"
                       type="sql"
                       default="1"
                       label="Select a Category"
                       query="SELECT id, title FROM #__ars_categories" key_field="id" value_field="title" />
            </fieldset>
        </fields>
    </config>
</extension>