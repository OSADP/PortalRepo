<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Leidos Akeeba Realease Application Search</name>
    <author>Leidos|Robert Roth</author>
    <version>0.13.2</version>
    <description>A custom module made by Leidos for OSADP to provide a better user interface for showcasing ARS Applications.</description>
    <files>
        <filename>mod_leidos_ars_search.xml</filename>
        <filename module="mod_leidos_ars_search">mod_leidos_ars_search.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>

        <filename>css/index.html</filename>
        <filename>css/bounce.animation.css</filename>
        <filename>css/main.css</filename>

        <filename>images/index.html</filename>
        <filename>images/osadp-logo.png</filename>

        <filename>app/index.html</filename>
        <filename>app/main.js</filename>
        <filename>app/router.js</filename>

        <filename>app/controllers/index.html</filename>
        <filename>app/controllers/AkeebaReleaseCtrl.js</filename>
        <filename>app/controllers/CategoryListCtrl.js</filename>
        <filename>app/controllers/ViewCtrl.js</filename>
        <filename>app/controllers/ApplicationCtrl.js</filename>

        <filename>app/services/index.html</filename>
        <filename>app/services/AkeebaService.js</filename>
        <filename>app/services/AkeebaItemDirective.js</filename>

        <filename>app/partials/index.html</filename>
        <filename>app/partials/main.ng.html</filename>
        <filename>app/partials/item.ng.html</filename>
        <filename>app/partials/application.ng.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="header" type="text" default="Module Header" label="Enter Module Header" description="Text entered here will be displayed as the modules header." size="20" />
            </fieldset>
        </fields>
    </config>
</extension>